<%= render 'layouts/errors', :object => @question %>

<%= form_for(@question) do |f| %>
  <div class="form-group ">
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Content" %><br>
    <%= f.text_area :content %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
