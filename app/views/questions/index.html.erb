<p><%= link_to 'Ask a Question', new_question_path, id: "new_link", remote: true %></p>

<h2>Stack Overflow Clone</h2>

<ul class="list-unstyled" id="questions-list">
  <% @questions.each do |question| %>
    <li><%= link_to question.title, question_path(question) %></li>
    <p>asked by <%= question.user.user_name %></p>
    <% if current_user.id == question.user.id %>
    <%= link_to "Edit", edit_question_path(question), :class => "btn btn-primary" %>
    <%= link_to "Remove", question_path(question),
                        data: { :confirm => "Sure you want to delete?" },
                        :method => "delete",
                        :class => "btn btn-danger" %>
    <% end %>
  <% end %>

</ul>
